\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{rntzgeometry}[2018/05/10]

%     a5: 148 x 210mm    5.8 x  8.3in
%     b5: 176 x 250mm    6.9 x  9.8in
%     a4: 210 x 297mm    8.3 x 11.7in
% letter: 216 x 279mm    8.5 x 11in

% We use reasonable vertical margins, but very small horizontal margins. This is
% because we're going to use the "narrow" package to reduce our horizontal
% width, but want the full width available for wide figures if necessary.
\DeclareOption{a5}{\def\rntz@geom{a5paper,text={128mm,170mm}}}
\DeclareOption{b5}{\def\rntz@geom{b5paper,text={146mm,200mm}}}
\DeclareOption{a4}{\def\rntz@geom{a4paper,text={170mm,240mm}}}
\DeclareOption{letter}{\def\rntz@geom{letterpaper,text={176mm,222mm}}}

% Pass unrecognized options to the "narrow" package.
\DeclareOption*{\PassOptionsToPackage{\CurrentOption}{narrow}}

\ExecuteOptions{b5}
\ProcessOptions\relax

\RequirePackage[\rntz@geom]{geometry}
\RequirePackage{narrow}
