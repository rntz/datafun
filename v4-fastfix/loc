#!/bin/bash
cd "$(dirname "$0")"

filter() {
    egrep --no-filename -v '^ *(//.*|\(\*.*\*\))? *$' "$@"
}

# FIXME.
#files="*.ml *.mll *.mly"
files="[A-Z]*.ml *.mli *.mly"

for name in $files; do
    printf "%5d %s\n" $(filter "$name" | wc -l) "$name"
done | sort -n

printf "%5d total\n" $(filter $files | wc -l)
